<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
		  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>dist</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}</directory>
			<outputDirectory/>
			<includes>
				<include>README.md</include>
				<include>LICENSE</include>
				<include>CHANGES.md</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/dist</directory>
			<outputDirectory/>
			<includes>
				<include>logo.bmp</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory/>
			<includes>
				<include>pulse-java-${project.version}-sources.jar</include>
				<include>pulse-java-${project.version}-javadoc.jar</include>
			</includes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>${project.build.directory}/pulse-java-${project.version}-jar-with-dependencies.jar</source>
			<outputDirectory/>
			<destName>pulse-java-${project.version}.jar</destName>
			<filtered>false</filtered>
			<fileMode>0644</fileMode>
		</file>
		<file>
			<source>${project.basedir}/src/dist/pulse</source>
			<outputDirectory/>
			<destName>pulse-java-${project.version}</destName>
			<filtered>true</filtered>
			<fileMode>0755</fileMode>
		</file>
		<file>
			<source>${project.basedir}/src/dist/pulse.bat</source>
			<outputDirectory/>
			<destName>pulse-java-${project.version}.bat</destName>
			<filtered>true</filtered>
			<fileMode>0755</fileMode>
		</file>
	</files>
</assembly>
